            @using (Html.BeginForm("ChiTietMoHinh", "MoHinh"))
            {
                @Html.ValidationSummary(true)
                <tr>
                    <td style="font-size:13px">
                        <p style="font-size:20px; font-weight:bold;margin-right:5px;">XẾP HẠNG SẢN PHẨM:</p>
                        <input type="radio" id="age1" name="Rate" value="1">
                        <label for="age1">
                            1 sao <i class="fa fa-star" aria-hidden="true"></i>
