                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                        </label><br>
                        <input type="radio" id="age2" name="Rate" value="2">
                        <label for="age2">
                            2 sao <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                        </label><br>
                        <input type="radio" id="age3" name="Rate" value="3">
                        <label for="age3">
                            3 sao <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                        </label><br>
                        <input type="radio" id="age4" name="Rate" value="4">
                        <label for="age4">
                            4 sao <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                        </label><br>
                        <input type="radio" id="age5" name="Rate" value="5" checked>
                        <label for="age5">
                            5 sao
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                        </label><br>

                    </td>
                </tr>
                <tr>
                    <td style="display:none"><input type="text" size="70" name="MaMH" value="@Model.MaMH" class="nhap-thong-tin-masp" readonly /></td>
                    <td>@Html.TextArea("BinhLuan", null, new { @class = "khungbinhluan", @placeholder = "Cảm nhận của bạn về sản phẩm như thế nào?", @required ="" }) @ViewData["err1"]</td>

                </tr>
                <tr>
                    <td>
                        <input type="submit" value="ĐĂNG BÌNH LUẬN" class="input-button " required />
                        <input type="reset" value="Nhập lại" class="input-button-reset" />
                    </td>
                </tr>
            }
        </table>
    }
</div>
