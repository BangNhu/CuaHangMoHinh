@model IEnumerable<CuaHangBanMoHinh.Models.EL.MOHINH>

@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    var dsSanPhamMoi = (List<CuaHangBanMoHinh.Models.EL.MOHINH>)ViewBag.SanPhamMoi;
    var dsSanPhamBanChay = (List<CuaHangBanMoHinh.Models.EL.MOHINH>)ViewBag.SanPhamBanChay;
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div id="carousel1" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#carousel1" data-slide-to="0" class="active"> </li>
                    <li data-target="#carousel1" data-slide-to="1" class=""> </li>
                    <li data-target="#carousel1" data-slide-to="2" class=""> </li>
                    <li data-target="#carousel1" data-slide-to="3" class=""> </li>
                    <li data-target="#carousel1" data-slide-to="4" class=""> </li>
                    <li data-target="#carousel1" data-slide-to="5" class=""> </li>
                </ol>
                @Html.Partial("_SliderPartial")
                <a class="left carousel-control" href="#carousel1" data-slide="prev"><span class="icon-prev"></span></a> <a class="right carousel-control" href="#carousel1" data-slide="next"><span class="icon-next"></span></a>
            </div>
        </div>
    </div>
</div>
<hr class="sidebar-divider">
<div class="container">
    <h3><a href="#" style="font-weight:inherit; ">SẢN PHẨM MỚI</a></h3>
    @{ int i = 0;}
    @foreach (var mohinh in dsSanPhamMoi)
    {
        i++;
        if (i % 3 == 0)
        {
            @:<div class="col-sm-4 col-md-3 col-lg-3 col-xs-5 hidden-xs">
            }
            else
            {
                @:<div class="col-sm-4 col-md-3 col-lg-3 col-xs-6">
                }
                <div class="thumbnail">
                    <img  src="~/Images/HinhLon/@mohinh.HinhLon" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook " style="width:300px;">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h5 style=" text-align: center;width: 100%;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;">
                            <a href="@Url.Action("ChiTietMoHinh", "MoHinh", new { id = mohinh.MaMH }) ">@mohinh.TenMH</a>
                        </h5>
                        <p style="text-align:center; color:darkslategrey; font-size:17px;">@Html.FormatValue(mohinh.GiaBan, "{0:#,###,##0}") VNĐ</p>
                        <p style="text-align:center;">
                            <a href="@Url.Action("ThemGioHang","GioHang", new { mamh = mohinh.MaMH, url = Request.Url.ToString() })" class="btn btn-primary" role="button">
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Thêm vào giỏ hàng
                            </a>
                        </p>

                    </div>
                </div>
            @:</div>
        }
</div>
<hr class="sidebar-divider">
</div>
<div class="container">
    <h3><a href="#" style="font-weight:inherit; ">SẢN PHẨM BÁN CHẠY</a></h3>
    @{ int j = 0;}
    @foreach (var mohinh in dsSanPhamBanChay)
    {
        j++;
        if (j % 3 == 0)
        {
            @:<div class="col-sm-4 col-md-3 col-lg-3 col-xs-5 hidden-xs">
            }
            else
            {
                @:<div class="col-sm-4 col-md-3 col-lg-3 col-xs-6">
                }
                <div class="thumbnail">
                    <img src="~/Images/HinhLon/@mohinh.HinhLon" alt="Thumbnail Image 1" class="img-responsive img-rounded imgbook " style="width:300px;">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h5 style=" text-align: center;width: 100%;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;">
                            <a href="@Url.Action("ChiTietMoHinh", "MoHinh", new { id = mohinh.MaMH }) ">@mohinh.TenMH</a>
                        </h5>
                        <p style="text-align:center; color:darkslategrey; font-size:17px;">@Html.FormatValue(mohinh.GiaBan, "{0:#,###,##0}") VNĐ</p>
                        <p style="text-align:center;">
                            <a href="@Url.Action("ThemGioHang","GioHang", new { mamh = mohinh.MaMH, url = Request.Url.ToString() })" class="btn btn-primary" role="button">
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Thêm vào giỏ hàng
                            </a>
                        </p>

                    </div>
                </div>
            @:</div>
        }
</div>

</div>
<hr class="sidebar-divider">